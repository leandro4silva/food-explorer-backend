// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id       String @id @default(cuid())
  name     String
  email    String @unique
  password String

  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

model Admin {
  id       String @id @default(cuid())
  name     String
  email    String @unique
  password String

  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

model Dish {
  id          String @id @default(cuid())
  image       String
  name        String @unique
  category    String
  price       String
  description String

  categoryId Category @relation(fields: [category], references: [id], onDelete: Cascade, onUpdate: Cascade)

  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  DishIngredients DishIngredients[]
}

model Category {
  id   String @id @default(cuid())
  name String @unique
  Dish Dish[]
}

model Ingredient {
  id              String            @id @default(cuid())
  name            String
  DishIngredients DishIngredients[]
}

model DishIngredients {
  id           String @id @default(cuid())
  ingredientId String
  dishId       String

  ingredient Ingredient @relation(fields: [ingredientId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  dish       Dish       @relation(fields: [dishId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}
